<div class="container">
  <div class="row span8 offset2">
    <h4><%= t('LBL011') %> <span class="badge badge-info"><%= @paginas.size %></span></h4>

    <table class="table table-striped  table-bordered table-hover">
      <thead >
      <tr>
        <th><%= t('LBL004') %></th>
        <th><%= t('LBL005') %></th>
        <th><%= t('LBL006') %></th>
        <th><%= t('LBL007') %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% if @paginas.size > 0 %>
          <% @paginas.each do |pagina| %>
              <tr id="tr_pagina_<%= pagina.id %>">
                <td><%= pagina.title %></td>
                <td><%= pagina.description %></td>
                <td><%= pagina.body %></td>
                <td><%= pagina.author %></td>
                <td class="td_group">
                  <div class="btn-group">
                    <button class="btn btn-primary"><%= t('LBL013') %></button>
                    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to t('LBL014'), pagina_path(I18n.locale,pagina) %>
                      </li>
                      <li>
                        <%= link_to t('LBL015'), edit_pagina_path(I18n.locale,pagina) %>
                      </li>
                      <li class="divider"/>
                      <li>
                        <label class="remove_pagina" id="<%= pagina.id %>"><%= t('LBL016') %></label>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
          <% end %>
      <%  else %>
          <tr >
            <td colspan="6" style="text-align: center"> <%= t('LB017') %> </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to t('LBL012'), new_pagina_path(I18n.locale) %>
  </div>
</div>

<!-- Modal confirmar exclusÃ£o-->
<div class="modal fade" id="modalExclusao" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t('LBL021') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="id_registro">
        <%= t('LBL018') %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('LBL019') %></button>
        <button type="button" id="btnExcluirPagina" class="btn btn-primary"><%= t('LBL020') %></button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready( function() {
        Paginas.init();
    });
</script>